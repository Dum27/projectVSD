<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ielts.mcpp.ielts.fragments.ProgressiveFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:background="#ffff4df1"
                android:paddingLeft="10dp"
                android:text="Breathing"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Progressive exercises can help offset excess energy caused by anxiety or nervousness.\n\nBefore the test, sitting outside the exam room, close your eyes.\n\nStarting with your feet, tense the foot muscles for 5 - 8 seconds. Release.\n\nThen inhale through your nose and exhale through your mouth twice.\n\nNext, tense the calve muscles for 5- 8 seconds. Release.\n\nRepeat with the different muscle groups: upper legs, abdomen, arms/hands, shoulders and face/jaw. Taking deep breath between tensing times.\n\nThen tense your whole body and release. This will rid your body of excess energy so keeping you calm."
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewProgressive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
