<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.ielts.mcpp.ielts.testsfragments.SpiderGramFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_spidergram_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7A0C66"
                android:text="Back"
                android:layout_gravity="left" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_spidergram" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/spidergram_text"
                android:layout_weight="2"
                android:text="The sub-topic is an idea or lexical item or functional phrase connected to the main topic"/>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewSpiderGram"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
