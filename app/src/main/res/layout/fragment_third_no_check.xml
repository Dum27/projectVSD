<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.ielts.mcpp.ielts.registration.ThirdNoCheckFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="What score do you need?"
            android:id="@+id/textView34" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_no_score_need"
            android:inputType="number"
            android:textColor="@color/material_blue_grey_900"
            android:background="@drawable/apptheme_textfield_activated_holo_light"/>/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="What`s your English level?"
            android:id="@+id/textView67" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_no_english_level"
            android:textColor="@color/material_blue_grey_900"
            android:background="@drawable/apptheme_textfield_activated_holo_light"/>/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Additional screen language?"
            android:id="@+id/textView68" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_no_additional_screen_language"
            android:textColor="@color/material_blue_grey_900"
            android:background="@drawable/apptheme_textfield_activated_holo_light"/>
        />
    </LinearLayout>



</LinearLayout>
